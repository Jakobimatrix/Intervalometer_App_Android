<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="clickableButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/min_clickable_button_size</item>
        <item name="android:layout_width">@dimen/min_clickable_button_size</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintWidth_max">@dimen/min_clickable_button_size</item>
        <item name="android:maxWidth">@dimen/min_clickable_button_size</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:scaleGravity">fill_vertical</item>
    </style>

    <style name="spacerBottomButtons">
        <item name="android:layout_weight">100</item>
        <item name="android:layout_below">@id/scroll_view_templates</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="clickableButtonBot" parent="@style/clickableButton">
        <item name="android:layout_below">@id/scroll_view_templates</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainPageTableSection">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MainPageTableSeperatorViewe">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">3pt</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_column">2</item>
    </style>

    <style name="MainPageTableTabSeperator">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">3pt</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainPageTableTextDescription">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3pt</item>
        <item name="android:layout_column">0</item>
    </style>
    <style name="MainPageTableTextInputTime">
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/Editable</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">7pt</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:ems">2</item>
        <item name="android:layout_margin">-4px</item>
    </style>
    <style name="MainPageTableTextInfo">
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">3</item>
    </style>

    <style name="TableRowEditFunction">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/Primary</item>
    </style>

    <style name="TableLayoutEditTemplate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/Primary</item>
    </style>

    <style name="EditFunctionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:background">@color/Primary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_column">0</item>
    </style>

    <style name="EditFunctionAction">
        <item name="android:textColor">@color/Editable</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_column">1</item>
    </style>

    <style name="functionInfoEdit">
        <item name="android:textColor">@color/Editable</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="functionInfoLabel">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingsH1">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:textSize">@dimen/H1</item>
    </style>

    <style name="SettingsLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Letters</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="SettingsRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Editable</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="SettingsRelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/Secondary</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>